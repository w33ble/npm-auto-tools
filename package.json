{
  "name": "@w33ble/npm-auto-tools",
  "version": "0.0.0",
  "description": "Automatic tooling for npm modules",
  "bin": {
    "npm-auto-version": "./bin/version.js"
  },
  "scripts": {
    "lint": "eslint \"*.{js,mjs}\" \"src/**/*.{js,mjs}\"",
    "precommit": "lint-staged",
    "version": "node ./bin/version.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w33ble/npm-auto-tools.git"
  },
  "keywords": [],
  "files": [
    "src/",
    "index.js",
    "index.mjs",
    "CHANGELOG.md",
    "AUTHORS.md"
  ],
  "author": "joe fleming (https://github.com/w33ble)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/w33ble/npm-auto-tools/issues"
  },
  "homepage": "https://github.com/w33ble/npm-auto-tools",
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "breakingPattern": "BREAKING CHANGE:",
    "template": ".changelog_template.hbs",
    "ignoreCommitPattern": "(chore|test):",
    "commitLimit": false
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.{js,mjs}": [
        "eslint --fix"
      ],
      "*.{js,mjs,json,css}": [
        "prettier --write"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "auto-authors": "^0.1.1",
    "auto-changelog": "^1.7.0",
    "execa": "^0.10.0",
    "getopts": "^2.0.6"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.9.0"
  }
}
